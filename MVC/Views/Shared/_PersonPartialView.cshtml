@model MVC.Models.Person

<div class="personContainer row personListItem">

    <div>
        <h4>@Model.PersonId</h4>
    </div>

    <div>
        <h4>@Model.Name</h4>
    </div>

    <div>
        <h4>@Model.PhoneNr</h4>
    </div>

    <div>
        <h4>@Model.City</h4>
    </div>

    <div>
        <a href="@Url.Action("DeletePerson", "People", new { id = Model.PersonId })" class="btn btn-danger btn-xs">Delete</a>
    </div>

</div>


