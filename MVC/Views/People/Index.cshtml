@model MVC.Models.PeopleViewModel


<h1>People</h1>

<form class="search-person-form" asp-controller="People" asp-action="Index" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="name">Search</label>
        <label asp-for="FilterString"></label>
        <input class="form-control" asp-for="FilterString" />
        @*<input class="form-control" type="text" name="search" />*@
    </div>

    <button class="btn btn-primary" type="submit">Search</button>
</form>

<br />

<form class="create-person-form" asp-controller="People" asp-action="CreatePerson" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label for="PhoneNr">Phone Number</label>
        <input class="form-control" type="text" name="PhoneNr" />
        <span asp-validation-for="PhoneNr"></span>
    </div>

    <div class="form-group">
        <label for="city">City</label>
        <input class="form-control" type="text" name="city" />
        <span asp-validation-for="City"></span>
    </div>


    <input class="btn btn-primary" type="submit" value="Create" />

</form>

<br />

<div class="container-fluid">

    <div class="personContainer row">

        <div>
            <h4>Name</h4>
        </div>

        <div>
            <h4>Phone Number</h4>
        </div>

        <div>
            <h4>City</h4>
        </div>

        <div>
        </div>

    </div>

    @if (Model != null)
    {
        @foreach (var person in Model.PeopleListView)
        {
            <partial name="~/Views/Shared/_PersonPartialView.cshtml" model=@person />
        }
    }
</div>